@model RolesDto

<div class="card carousel-dark">
    <div class="card-body">
        <div class="card-title text-center mb-3">
            <h3>Delete Role</h3>
        </div>

        <div class="table-responsive">

            <table class="table table-bordered">
                <tr>
                    <th scope="row">Name</th>
                    <td>@Model.Name</td>
                   
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>
                        <form method="post" class="form-inline">
                            <input type="submit" class="btn btn-danger mb-0" asp-controller="ManageAccounts" asp-action="DeleteRole" asp-route-id="@Model.Id" value="Delete" />
                            <a class="btn btn-primary  p-3" asp-controller="ManageAccounts" asp-action="Index">Back</a>
                        </form>
                    </td>
                </tr>

            </table>

            
        </div>

    </div>
</div>