@model IEnumerable<CategoryDto>



<div class="container">
    <div id="toast-container"></div>
    <div class="row">
        <div class="col-6">
            <h1> Index </h1>
        </div>
        <div class="col-3 offset-3">
            <a onclick="CreateUpdateCategory()" data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-primary">Create Category</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Total Order</th>
                            <th class="col-3 "></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach(var item in Model)
                     {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.TotalOrders</td>
                            <td>
                                    <a onclick="CreateUpdateCategory('@item.Id')" data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-primary mx-3 px-4" asp-route-id="@item.Id">Edit</a>
                                    <a onclick="confirmDelete('@item.Id')" class="btn btn-danger" @*asp-action="delete" asp-route-id="@item.Id"*@>Delete</a>
                            </td>
                        </tr>    
                     }
                    </tbody>
                   
                </table>
            </div>
        </div>
    </div>
</div>



<partial name="_Modal" />


@section Scripts
    {
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


    <!-- SweetAlert2 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.7/dist/sweetalert2.all.min.js"></script>

    <script src="/js/CategoryAjax.js" type="text/javascript"></script>    
}